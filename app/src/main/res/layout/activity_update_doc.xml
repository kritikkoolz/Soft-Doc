<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_doc"
    android:background="@drawable/back">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AA0000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/iv"
        android:layout_width="390dp"
        android:layout_height="300dp"
        android:background="@drawable/box_dash"
        android:contentDescription="@string/todo"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.80"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/ed1"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:hint="@string/blank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135" />

    <EditText
        android:id="@+id/ed2"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:hint="@string/blank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView5"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:foregroundGravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41"
        app:lottie_autoPlay="true"
        app:lottie_fileName="doc_4.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unique_id_no"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/id_holder_name"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />
    <LinearLayout
        android:id="@+id/Up"
        android:onClick="Update"
        android:layout_width="270dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        android:background="@drawable/button_shape"
        android:elevation="10dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:src="@drawable/add"
            android:paddingStart="25dp"
            android:foregroundGravity="center"
            android:contentDescription="@string/todo"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:text="@string/update_document"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Up_img"
        android:onClick="Update_img"
        android:layout_width="270dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315"
        android:background="@drawable/button_shape"
        android:elevation="10dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:src="@drawable/add_image"
            android:paddingStart="25dp"
            android:foregroundGravity="center"
            android:contentDescription="@string/todo"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:text="@string/update_image"
            android:textSize="18sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>